# Database Configuration
DATABASE_URL="file:./dev.db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Blockchain Configuration
PRIVATE_KEY="your-wallet-private-key-for-deployment"
INFURA_PROJECT_ID="your-infura-project-id"
ALCHEMY_API_KEY="your-alchemy-api-key"

# Network URLs
ETHEREUM_MAINNET_URL="https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID"
ETHEREUM_SEPOLIA_URL="https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID"
POLYGON_MAINNET_URL="https://polygon-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID"

# IPFS Configuration
PINATA_API_KEY="your-pinata-api-key"
PINATA_SECRET_KEY="your-pinata-secret-key"

# API Configuration
PORT=3001
NODE_ENV="development"
CORS_ORIGIN="http://localhost:5173"

# External Services
SENDGRID_API_KEY="your-sendgrid-api-key"
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"

# KYC Service
JUMIO_API_TOKEN="your-jumio-api-token"
JUMIO_API_SECRET="your-jumio-api-secret"

# Redis Configuration (for production)
REDIS_URL="redis://localhost:6379"

# File Upload
MAX_FILE_SIZE="10485760" # 10MB
UPLOAD_PATH="./uploads"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# Logging
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"
